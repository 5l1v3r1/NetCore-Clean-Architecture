@page "{nameKey}"
@model RazorPages.Pages.Accounts.DetailsModel
@{
    ViewData["Title"] = "Details";
}

@if(!String.IsNullOrEmpty(Model.Message))
{
    <div class="alert alert-danger">@Model.Message</div>
}

<h1>@Model.AccountDetails.Account.Name</h1>
<h3>@Model.AccountDetails.Account.NameKey</h3>
<small>@Model.AccountDetails.Account.Id</small>

<hr />

<form asp-page="Details" method="post">

    @if (Model.AccountDetails.DeleteEnabled.Value)
    {
        <button class="btn btn-danger" asp-page-handler="Delete">Close account</button>
    }

</form>
